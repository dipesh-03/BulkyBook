@model CoverType

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit CoverType</h2>
            <hr />
        </div>

        @* shows all invalide fields summary *@
        @*<div asp-validation-summary="All"></div>*@

        <div class="mb-3">
            <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control" disabled/>

            @*If name is invalid then show the message (Server side)*@
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <button class="btn btn-primary" type="submit" style="width:150px">Update</button>
        <a asp-controller="Cover" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@*Inbuilt validations to perform client side validations*@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
