@*to take parameter from controller*@
@model IEnumerable<CoverType>

@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Cover" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Cover
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Cover Id</th>
                <th>Cover Name</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="40%"> @obj.Id </td>
                    <td width="30%"> @obj.Name</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Cover" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> &nbsp; Edit
                            </a>

                            <a asp-controller="Cover" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> &nbsp; Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>